<div class="card shadow-base-300 bg-base-100 w-96 shadow-xl">
    <div class="card-body">
        <h2 class="card-title">Summary</h2>
        <div class="flex flex-col justify-between">
            <div class="flex flex-row px-2 w-96 justify-between">
                <p class="text-success">{{stats.featuresPassed}} features passed</p>
                <p class="text-error text-right">{{stats.scenariosPassed}} scenarios passed</p>
            </div>
            <div class="flex flex-row px-2 w-96 justify-between">
                <p class="text-success">{{stats.featuresFailed}} features failed</p>
                <p class="text-error text-right">{{stats.scenariosFailed}} scenarios failed</p>
            </div>
        </div>
    </div>
</div>