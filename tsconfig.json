{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "build",
        "target": "ES6",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "paths": {
            "@config": ["src/config.ts"],
            "@data/*": ["src/data/*"],
            "@processing/*": ["src/processing/*"],
            "@reading/*": ["src/reading/*"],
            "@ui/*": ["src/ui/*"],
            "@util/*": ["src/util/*"],
            "@types": ["src/types.d.ts"],
            "@constants": ["constants.ts"]
        }
    },
    "include": [
        "cli.ts",
        "constants.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
        "package.json",
        "scripts/**/*.ts",
        "./LICENSE"
    ],
    "exclude": [
        "node_modules"
    ]
}