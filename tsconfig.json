{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "build",
        "target": "ES6",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "include": [
        "cli.ts",
        "constants.ts",
        "src/**/*.tsx",
        "src/**/*.ts",
        "package.json",
        "scripts/**/*.ts",
        "./LICENSE"
    ],
    "exclude": [
        "node_modules"
    ]
}